---
---

[
  {% for collection in site.collections %}
    {% unless collection.label == "posts" %}
      {% for recipe in site[collection.label] %}
        {
          "label"    : "{{ recipe.label }}",
          "url"      : "{{ site.baseurl }}{{ recipe.url }}",
          "tags"     : "{{ recipe.tags | join: ', ' }}"
        }
      {% endfor %}
    {% endunless %}
  {% endfor %}
]