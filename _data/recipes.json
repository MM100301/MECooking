---
---

[
  {% for collection in site.collections %}
    {% unless collection.label == 'posts' %}
      {% for recipe in collection %}
        {
          "title"    : "{{ post.title }}",
          "url"      : "{{ site.baseurl }}{{ post.url }}",
          "tags"     : "{{ post.tags | join: ', ' }}"
        }
      {% endfor %}
    {% endunless %}
  {% endfor %}
]